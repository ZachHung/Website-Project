<link rel="stylesheet" href="/css/purchase.css" />

<section class="container"> {{!_1QwuCJ }} 
    <div class="status_menu">
        <a href="/purchase?status=all">Tất cả</a>
        <a href="/purchase?status=delivering">Đang giao  </a>
        <a href="/purchase?status=delivered">Đã giao</a>
    </div>
    
    <div class="search">
        <input type="text" class="searchTerm" placeholder=" Tìm kiếm lịch sử mua hàng theo tên, thương hiệu... của sản phẩm ">
        <button type="submit" class="searchButton" >
            <i class="fa fa-search"></i>
        </button>
    </div>
    {{#each purchase}}
    {{#each list}}
    <div class="products">
        <div class="single_product">
            <div class="info">
                <div class="brand_status">
                    <div class="brand">
                       
                        <p>Thương hiệu: {{this.optionID.item.brand}} | Ngày mua: {{../this.date}}  </p>
                    </div>
                    <div class="status">
                        <p>Trạng thái:  {{../this.status}}</p>
                    </div>
                  
                </div>
                <hr>
                <a href="/phone/iphone11-256GB" class="name_price">
                    <div class="img_name">
                        <img src="{{this.optionID.color.[0].image}}" alt="">
                        <div class="name_num">
                            <p class="name">{{this.optionID.item.name}}</p>
                            <p class="num">x{{this.num}}</p>
                            <p class="num">Màu: {{this.color}}</p>

                            
                        </div>
                    </div>

                    <div class="price_one_product">
                        <p><strong>{{currentChange this.optionID.color.[0].price}}</strong> </p>
                    </div>
                </a>
                <hr>
            </div>
            <div class="price">
                <p id="totalPrice">Tổng số tiền: <strong >{{currentChange (totalPrice this.optionID.color.[0].price this.num)}}</strong></p>
            </div>
            
            <div class="action">
                <button class="btn btn_repurchase">Mua lại</button>
                <button class="btn btn_delete">Xóa</button>
            </div>
        </div>

    </div>
    {{/each}}

